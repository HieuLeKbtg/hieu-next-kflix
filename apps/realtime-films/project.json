{
    "name": "realtime-films",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "apps/realtime-films",
    "projectType": "application",
    "targets": {
        "build": {
            "executor": "@nx/next:build",
            "outputs": ["{options.outputPath}"],
            "defaultConfiguration": "production",
            "options": {
                "outputPath": "dist/apps/realtime-films",
                "assets": [
                    {
                        "input": "./libs/utils/src/lib/assets",
                        "glob": "**/*",
                        "output": "assets"
                    }
                ]
            },
            "configurations": {
                "development": {
                    "outputPath": "apps/realtime-films"
                },
                "production": {}
            }
        },
        "serve": {
            "executor": "@nx/next:server",
            "defaultConfiguration": "development",
            "options": {
                "buildTarget": "realtime-films:build",
                "dev": true,
                "port": 4204
            },
            "configurations": {
                "development": {
                    "buildTarget": "realtime-films:build:development",
                    "dev": true
                },
                "production": {
                    "buildTarget": "realtime-films:build:production",
                    "dev": false
                }
            }
        },
        "export": {
            "executor": "@nx/next:export",
            "options": {
                "buildTarget": "realtime-films:build:production"
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "apps/realtime-films/jest.config.ts",
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            }
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["apps/realtime-films/**/*.{ts,tsx,js,jsx}"]
            }
        }
    },
    "tags": []
}
