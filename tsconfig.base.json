{
    "compileOnSave": false,
    "compilerOptions": {
        "jsx": "preserve",
        "allowJs": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "incremental": true,
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2020", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/components/*": ["src/components/*"],
            "@/containers/*": ["src/containers/*"],
            "@/fixtures/*": ["src/fixtures/*"],
            "@/helpers/*": ["src/helpers/*"],
            "@/lib/*": ["src/lib/*"],
            "@/providers/*": ["src/providers/*"],
            "@/services/*": ["src/services/*"],
            "@/types/*": ["src/types/*"],
            "@/utils/*": ["src/utils/*"],
            "@hieu-next-kflix/containers": ["libs/containers/src/index.ts"],
            "@hieu-next-kflix/fixtures": ["libs/fixtures/src/index.ts"],
            "@hieu-next-kflix/libs/component": ["libs/component/src/index.ts"],
            "@hieu-next-kflix/providers": ["libs/providers/src/index.ts"],
            "@hieu-next-kflix/registries": ["libs/registries/src/index.ts"],
            "@hieu-next-kflix/services": ["libs/services/src/index.ts"],
            "@hieu-next-kflix/types": ["libs/types/src/index.ts"],
            "@hieu-next-kflix/utils": ["libs/utils/src/index.ts"]
        },
        "plugins": [
            {
                "name": "next"
            }
        ],
        "types": ["jest", "node"]
    },
    "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "next-env.d.ts"],
    "exclude": ["node_modules", "tmp"]
}
