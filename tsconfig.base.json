{
    "compileOnSave": false,
    "compilerOptions": {
        "jsx": "preserve",
        "allowJs": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "incremental": true,
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2020", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@hieu-next-kflix/shared": ["libs/shared/src/index.ts"],
            "@libs/component": ["libs/component/src/index.ts"],
            "@libs/containers": ["libs/containers/src/index.ts"],
            "@libs/fixtures": ["libs/fixtures/src/index.ts"],
            "@libs/providers": ["libs/providers/src/index.ts"],
            "@libs/registries": ["libs/registries/src/index.ts"],
            "@libs/services": ["libs/services/src/index.ts"],
            "@libs/types": ["libs/types/src/index.ts"],
            "@libs/utils": ["libs/utils/src/index.ts"],
            "@libs/shared": ["libs/shared/src/index.ts"]
        },
        "plugins": [
            {
                "name": "next"
            }
        ],
        "types": ["jest", "node"]
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx",
        "next-env.d.ts",
        "./libs/*/src/**/*",
        "./apps/*/src/**/*"
    ],
    "exclude": ["node_modules", "tmp"]
}
